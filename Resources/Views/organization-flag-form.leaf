#extend("layout"):
    #export("content"):
        <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
            <div class="flex items-center mb-4">
                <a href="/dashboard/organizations/#(organization.id)/flags" class="text-indigo-600 hover:text-indigo-900 dark:text-indigo-400 dark:hover:text-indigo-300 mr-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                </a>
                <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
                    #if(editing):
                        Edit Feature Flag
                    #else:
                        Create Feature Flag
                    #endif
                </h2>
            </div>
            
            <div class="bg-white dark:bg-gray-800 shadow overflow-hidden sm:rounded-lg">
                <div class="px-4 py-5 sm:px-6">
                    <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white">
                        #if(editing):
                            Edit Feature Flag for #(organization.name)
                        #else:
                            Create Feature Flag for #(organization.name)
                        #endif
                    </h3>
                    <p class="mt-1 max-w-2xl text-sm text-gray-500 dark:text-gray-400">
                        #if(editing):
                            Update the details of this feature flag.
                        #else:
                            Define a new feature flag for your organization.
                        #endif
                    </p>
                </div>
                <div class="border-t border-gray-200 dark:border-gray-700 p-6">
                    <form action="#if(editing):/dashboard/organizations/#(organization.id)/flags/#(flag.id)/edit#else:/dashboard/organizations/#(organization.id)/flags/create#endif" method="POST">
                        <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
                            <div class="sm:col-span-3">
                                <label for="key" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Key</label>
                                <div class="mt-1">
                                    <input type="text" name="key" id="key" #if(editing):value="#(flag.key)"#endif required class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md" placeholder="my-feature-flag">
                                </div>
                                <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">A unique identifier for your feature flag.</p>
                            </div>

                            <div class="sm:col-span-3">
                                <label for="type" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Type</label>
                                <div class="mt-1">
                                    <select id="type" name="type" required class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md">
                                        <option value="boolean" #if(editing && flag.type == "boolean"):selected#endif>Boolean</option>
                                        <option value="string" #if(editing && flag.type == "string"):selected#endif>String</option>
                                        <option value="number" #if(editing && flag.type == "number"):selected#endif>Number</option>
                                        <option value="json" #if(editing && flag.type == "json"):selected#endif>JSON</option>
                                    </select>
                                </div>
                                <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">The data type of your feature flag.</p>
                            </div>

                            <div class="sm:col-span-6">
                                <label for="defaultValue" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Default Value</label>
                                <div class="mt-1">
                                    <input type="text" name="defaultValue" id="defaultValue" #if(editing):value="#(flag.defaultValue)"#endif required class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md" placeholder="true">
                                </div>
                                <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">The default value for your feature flag when no overrides are present.</p>
                            </div>

                            <div class="sm:col-span-6">
                                <label for="description" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Description</label>
                                <div class="mt-1">
                                    <textarea id="description" name="description" rows="3" class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md">#if(editing):#(flag.description)#endif</textarea>
                                </div>
                                <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">A description of what this feature flag controls.</p>
                            </div>
                        </div>
                        
                        <div class="mt-6 flex justify-end">
                            <a href="/dashboard/organizations/#(organization.id)/flags" class="bg-white dark:bg-gray-700 py-2 px-4 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm text-sm font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                Cancel
                            </a>
                            <button type="submit" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-700 dark:hover:bg-indigo-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                #if(editing):
                                    Update
                                #else:
                                    Create
                                #endif
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    #endexport
#endextend 